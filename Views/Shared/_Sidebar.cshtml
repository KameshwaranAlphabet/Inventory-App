<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="~/js/site.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f5f5;
            display: flex;
            flex-direction: column;
            margin: 0;
        }

        .header {
            width: 98%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            left: 0;
            height: 60px;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .header .logo {
                height: 40px;
            }

            .header .user-info {
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .header .user-info img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    object-fit: cover;
                    border: 2px solid #007bff;
                }

                .header .user-info span {
                    font-size: 16px;
                    font-weight: bold;
                    color: #333;
                }

            .header .buttons {
                display: flex;
                gap: 10px;
            }

            .header button {
                background: #007bff;
                color: white;
                border: none;
                padding: 10px 15px;
                cursor: pointer;
                border-radius: 5px;
                transition: background 0.3s;
            }

                .header button:hover {
                    background: #0056b3;
                }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #333;
            color: white;
            padding: 80px 20px 20px;
            position: fixed;
            left: 0;
            top: 0;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease-in-out;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px;
                margin: 5px 0;
                display: flex;
                align-items: center;
                gap: 10px;
                border-radius: 5px;
                transition: transform 0.2s, background 0.3s;
            }

                .sidebar a:hover {
                    background: #575757;
                    transform: scale(1.1);
                }

            .sidebar img {
                width: 24px;
                height: 24px;
            }

        .main-content {
            margin-left: 270px;
            padding: 80px 20px 20px;
            flex: 1;
        }

        /* Mobile Responsive Sidebar */
        @@media screen and (max-width: 768px) {
            .sidebar {
                width: 200px;
                transform: translateX(-100%);
                position: fixed;
                z-index: 1000;
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .main-content {
                margin-left: 0;
                width: 100%;
            }

            .menu-toggle {
                display: block;
                position: absolute;
                top: 15px;
                left: 15px;
                background: #333;
                color: white;
                padding: 10px;
                cursor: pointer;
                z-index: 1100;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <img src="@Url.Content("~/Images/alphabet-logo.png")" alt="Logo" class="logo">

        <div class="user-info">
            <img src="@Url.Content("~/Images/default image.jpg")" alt="User Image">
            <span> @ViewBag.UserName</span>
        </div>

        <div class="buttons">
            <button onclick="window.location.href='@Url.Action("Register", "Home")'">Create User</button>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#" onclick="loadPage('Discuss')">
            <img src="@Url.Content("~/Images/download.png")" alt="Discuss">
            Discuss
        </a>
        <a href="#" onclick="loadPage('Dashboards')">
            <img src="@Url.Content("~/Images/dashboard.png")" alt="Dashboards">
            Dashboards
        </a>
        <a href="@Url.Action("Index", "Inventory")" onclick="loadPage('Inventory')">
            <img src="@Url.Content("~/Images/Inventory.png")" alt="Inventory">
            Inventory
        </a>
        <a href="@Url.Action("Index", "Scanner")" onclick="loadPage('Barcode')">
            <img src="@Url.Content("~/Images/barcode.png")" alt="Barcode">
            Barcode
        </a>
        <a href="#" onclick="loadPage('Apps')">
            <img src="@Url.Content("~/Images/Apps.png")" alt="Apps">
            Apps
        </a>
        <a href="@Url.Action("Logout", "Home")" onclick="loadPage('logout')">
            <img src="@Url.Content("~/Images/alphabet-logo.png")" alt="Logout">
            LogOut
        </a>
    </div>

    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('show');
        }

        function loadPage(pageName) {
            let content = document.getElementById('content');

            if (pageName === 'Inventory') {
                content.innerHTML = `
                    <div class="loading-container">
                        <div class="spinner"></div>
                    </div>`;

                fetch('@Url.Action("Index", "Inventory")')
                    .then(response => response.text())
                    .then(html => {
                        content.innerHTML = html;
                    })
                    .catch(error => {
                        content.innerHTML = '<p>Error loading page.</p>';
                        console.error('Error:', error);
                    });
            }
            else if (pageName === 'logout') {
                content.innerHTML = `
                    <div class="loading-container">
                        <div class="spinner"></div>
                    </div>`;
                    alert()
                fetch('@Url.Action("Logout", "Home")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                }
                }).then(response => {
                    if (response.redirected) {
                        window.location.href = response.url; // Redirect to login page
                    }
                });
            }
            else {
                content.innerHTML = `<h2>${pageName} Page</h2><p>Content for ${pageName} will be loaded here.</p>`;
            }
        }
    </script>
</body>
</html>
