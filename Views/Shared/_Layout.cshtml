<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventree_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventree_App.styles.css" asp-append-version="true" />
</head>
<body>
        <div class="sidebar">
            @*         <button class="menu-toggle" onclick="toggleSidebar()">☰ Menu</button>
 *@
            <a href="index.html">
                <img src="./Images/alphabet-logo.png" alt="Logo" class="logo">
            </a>        <a href="#" onclick="loadPage('Discuss')">
                <img src="./Images/download.png" alt="Discuss">
                Discuss
            </a>
            <a href="#" onclick="loadPage('Dashboards')">
                <img src="./Images/dashboard.png" alt="Dashboards">
                Dashboards
            </a>
            <a href="#" onclick="loadPage('Inventory')">
                <img src="./images/inventory.png" alt="Inventory">
                Inventory
            </a>
            <a href="#" onclick="loadPage('Barcode')">
                <img src="./Images/barcode.png" alt="Barcode">
                Barcode
            </a>
            <a href="#" onclick="loadPage('Apps')">
                <img src="./Images/apps.png" alt="Apps">
                Apps
            </a>
        </div>
        <div class="main-content" id="content">
         
        </div>
</body>
<script>
    function toggleSidebar() {
        document.querySelector('.sidebar').classList.toggle('show');
    }

    function loadPage(pageName) {
        let content = document.getElementById('content');

        if (pageName === 'Inventory') {
            // Display a centered spinner
            content.innerHTML = `
                <div class="loading-container">
                    <div class="spinner"></div>
                </div>`;

            fetch('@Url.Action("Index", "Inventory")')
                .then(response => response.text())
                .then(html => {
                    content.innerHTML = html;
                })
                .catch(error => {
                    content.innerHTML = '<p>Error loading page.</p>';
                    console.error('Error:', error);
                });
        } else {
            content.innerHTML = `<h2>${pageName} Page</h2><p>Content for ${pageName} will be loaded here.</p>`;
        }
    }

</script>
</html>
