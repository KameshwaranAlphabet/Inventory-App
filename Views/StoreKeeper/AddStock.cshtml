@model Inventree_App.Models.Stocks

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(Model?.Id > 0 ? "Edit Stock" : "Add New Stock")</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card p-4 shadow-sm">
            <h2 class="text-center">@(Model?.Id > 0 ? "Edit Stock" : "Add New Stock")</h2>

            <form method="post" asp-action="@(Model?.Id > 0 ? "Edit" : "Create")" asp-controller="Inventory">
                @if (Model?.Id > 0)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Stock Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter stock name" required>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input type="number" class="form-control" asp-for="Quantity" placeholder="Enter quantity" required>
                </div>

                <div class="mb-3">
                    <label asp-for="MaxQuantity" class="form-label">Max Quantity</label>
                    <input type="number" class="form-control" asp-for="MaxQuantity" placeholder="Enter max quantity">
                </div>

                <div class="mb-3">
                    <label asp-for="LocationId" class="form-label">Location</label>
                    <select class="form-select" asp-for="LocationId" asp-items="@ViewData["Locations"] as SelectList">
                        <option value="">Select a location</option>
                    </select>
                </div>
                

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Stock Category</label>
                    <select class="form-select" asp-for="CategoryId" asp-items="@ViewData["Categories"] as SelectList">
                        <option value="">Select a category</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">@(Model?.Id > 0 ? "Update" : "Save")</button>
                </div>

                <div class="text-center mt-3">
                    <a asp-action="Inventory" class="btn btn-link">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
