@model List<Inventree_App.Models.Stocks>

@{
    ViewData["Title"] = "Inventory Overview";
}
@await Html.PartialAsync("_Sidebar") <!-- Include Sidebar Here -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Overview</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f4;
            padding: 82px;
            text-align: center;
        }

        .container {
            width: 60%;
            margin: 50px auto;
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 4px 4px 20px rgba(0, 0, 0, 0.1);
        }

        .head {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .btn {
            background: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

            .btn:hover {
                background: #0056b3;
            }

        h2 {
            color: #333;
            margin: 0;
        }

        .inventory-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            border-bottom: 1px solid #ddd;
            font-size: 16px;
        }

        .progress-bar {
            width: 50%;
            height: 14px;
            background: #eee;
            border-radius: 7px;
            overflow: hidden;
            position: relative;
        }

        .progress-fill {
            height: 100%;
            width: 0%;
            transition: width 1.5s ease-in-out;
        }

        .low {
            background: #ff4d4d;
        }

        .medium {
            background: #ffb84d;
        }

        .high {
            background: #4caf50;
        }

        .icon {
            font-size: 20px;
            margin-right: 10px;
        }

        .details {
            display: flex;
            align-items: center;
            width: 20%;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="head">
            <h2>📦 Inventory Overview</h2>
            <div>
                <button class="btn" onclick="window.location.href='@Url.Action("Form", "CustomColumn")'">Add Column</button>
                <button class="btn" onclick="window.location.href='@Url.Action("Create", "Inventory")'">Add New</button>
                <button class="btn" onclick="importCSV()">Import CSV</button>
            </div>
        </div>

        @foreach (var item in Model)
        {
            var percentage = (item.Quantity / (float)item.MaxQuantity) * 100;
            var colorClass = percentage < 30 ? "low" : (percentage < 70 ? "medium" : "high");
            <div class="inventory-item">
                <span class="icon">📌</span>
                <span>@item.Name</span>
                <div class="progress-bar">
                    <div class="progress-fill @colorClass" data-percentage="@percentage"></div>
                </div>
                <div class="details">
                    <span>@item.Quantity</span>
                    <span>/</span>
                    <span>@item.MaxQuantity</span>
                </div>
            </div>
        }
    </div>

    <script>
        function updateProgressBars() {
            let progressBars = document.querySelectorAll(".progress-fill");
            progressBars.forEach(bar => {
                let finalWidth = bar.getAttribute("data-percentage");
                setTimeout(() => {
                    bar.style.width = finalWidth + "%";
                }, 300);
            });
        }

        updateProgressBars();

        function importCSV() {
            alert("Import CSV Clicked");
        }
    </script>
</body>
</html>
