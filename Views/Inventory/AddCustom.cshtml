@model List<string> 


@* @await Html.PartialAsync("_Sidebar") <!-- Sidebar -->
 *@
<div class="container">
    <h2>Manage Custom Columns</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form method="post" action="@Url.Action("AddColumn", "CustomColumn")">
        <label>Column Name:</label>
        <input type="text" name="ColumnName" required />

        <label>Data Type:</label>
        <select name="DataType">
            <option value="text">Text</option>
            <option value="number">Number</option>
            <option value="date">Date</option>
        </select>

        <button type="submit">Add Column</button>
    </form>

    <h3>Existing Columns</h3>
    <table>
        <tr>
            <th>Column Name</th>
            <th>Data Type</th>
        </tr>
        @foreach (var column in Model)
        {
            <tr>
                <td>@column</td>
                <td>@column.GetType()</td>
            </tr>
        }
    </table>

    <a href="@Url.Action("Form", "Inventory")">Go to Inventory Form</a>
</div>

