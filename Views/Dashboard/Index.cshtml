
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="./css/site.css" />
    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="container">
        <div class="app-grid">
            <div class="app-card" onclick="openApp('Discuss')">
                <img src="./Images/download.png" alt="Discuss">
                <p>Discuss</p>
            </div>
            <div class="app-card" onclick="openApp('Dashboards')">
                <img src="./Images/dashboard.png" alt="Dashboards">
                <p>Dashboards</p>
            </div>
           @*  <div class="app-card" onclick="openApp('Inventory')">
                <img src="./images/inventory.png" alt="Inventory">
                <p>Inventory</p>
            </div> *@
            <div class="app-card" onclick="window.location.href='@Url.Action("Index", "Inventory")'">
                <img src="~/images/inventory.png" alt="Inventory">
                <p>Inventory</p>
            </div>

            <div class="app-card" onclick="openApp('Barcode')">
                <img src="./Images/barcode.png" alt="Barcode">
                <p>Barcode</p>
            </div>
            <div class="app-card" onclick="openApp('Apps')">
                <img src="./Images/apps.png" alt="Apps">
                <p>Apps</p>
            </div>
        </div>
    </div>
</body>
</html>

