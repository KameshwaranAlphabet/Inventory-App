@{
    Layout = null; // Prevent applying the layout
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>aLphabet-Connect</title>
    <link rel="icon" type="image/x-icon" href="/Images/favicon.png">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f2f5;
        }

        .container-fluid {
            max-width: 900px;
        }

        .left-panel {
            background: linear-gradient(135deg, #00bfa6, #008c8c);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            text-align: center;
            border-radius: 10px 0 0 10px;
        }

        .right-panel {
            background: white;
            padding: 40px;
            border-radius: 0 10px 10px 0;
        }

        .social-buttons button {
            width: 100%;
            margin-bottom: 10px;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary {
            width: 100%;
        }

        @@media (max-width: 768px) {
            .left-panel

        {
            display: none;
        }

        .right-panel {
            border-radius: 10px;
        }

        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row shadow-lg">
            <!-- Left Panel -->
            <div class="col-md-6 left-panel">
                <h2>Welcome Back!</h2>
                <p>To keep connected with us please login with your personal info</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light">SIGN IN</a>
            </div>

            <!-- Right Panel -->
            <div class="col-md-6 right-panel">
                <h2 class="text-center mb-4">Create Account</h2>

                <!-- Social Login -->
                <div class="social-buttons text-center mb-3">
                    <button class="btn btn-outline-dark"><i class="bi bi-facebook"></i> Facebook</button>
                    <button class="btn btn-outline-dark"><i class="bi bi-google"></i> Google</button>
                    <button class="btn btn-outline-dark"><i class="bi bi-linkedin"></i> LinkedIn</button>
                </div>
                <p class="text-center">or use your email for registration</p>

                <!-- Registration Form -->
                <form method="post" action="/Home/Register" class="needs-validation" novalidate onsubmit="return validatePasswords()">
                    <div class="mb-3">
                        <input type="text" id="FirstName" name="FirstName" class="form-control" placeholder="First Name" required>
                    </div>
                    <div class="mb-3">
                        <input type="text" id="LastName" name="LastName" class="form-control" placeholder="Last Name" required>
                    </div>
                    <div class="mb-3">
                        <input type="text" id="Username" name="Username" class="form-control" placeholder="Username" required>
                    </div>
                    <div class="mb-3">
                        <input type="email" id="Email" name="Email" class="form-control" placeholder="Email" required>
                    </div>
                    <div class="mb-3">
                        <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" required>
                    </div>
                    <div class="mb-3">
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" required>
                        <div class="text-danger" id="passwordError" style="display: none;">Passwords do not match</div>
                    </div>
                    <div class="mb-3">
                        <select name="UserRoles" id="UserRoles" class="form-control" required>
                            <option value="">Select Role</option>
                            <option value="Admin">Admin</option>
                            <option value="Lab Supervisor">Lab Supervisor</option>
                            <option value="Purchase Team">Purchase Team</option>
                            <option value="Faculty">Faculty</option>
                            <option value="Storekeeper">Storekeeper</option>
                            <option value="Lab Faculty">Lab Faculty</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">SIGN UP</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Password Validation Script -->
    <script>
        function validatePasswords() {
            var password = document.getElementById("Password").value;
            var confirmPassword = document.getElementById("ConfirmPassword").value;
            var errorElement = document.getElementById("passwordError");

            if (password !== confirmPassword) {
                errorElement.style.display = "block";
                return false;
            } else {
                errorElement.style.display = "none";
                return true;
            }
        }
    </script>
</body>

</html>
