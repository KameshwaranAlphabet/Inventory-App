@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>myaLphabet</title>
    <link rel="icon" type="image/x-icon" href="/Images/favicon.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        /* Animation Keyframes */
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
            /* ✨ Clean, single-color background */
            background-color: #f0f2f5;
        }

        .login-card {
            width: 100%;
            max-width: 450px;
            padding: 3rem;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            border: 1px solid #e9ecef;
            overflow: hidden;
        }

            /* Staggered Animation for child elements */
            .login-card > * {
                opacity: 0;
                animation: slideIn 0.6s ease-out forwards;
            }

        .logo-container {
            animation-delay: 0.1s;
        }

        .login-card h2 {
            animation-delay: 0.2s;
        }

        .login-card form .group-1 {
            animation-delay: 0.3s;
        }

        .login-card form .group-2 {
            animation-delay: 0.4s;
        }

        .login-card form .group-3 {
            animation-delay: 0.5s;
        }

        .login-card form .group-4 {
            animation-delay: 0.6s;
        }

        .login-card .footer-text {
            animation-delay: 0.7s;
        }

        .logo {
            height: 50px;
            margin-bottom: 1rem;
        }

        .login-card h2 {
            font-weight: 700;
            color: #333;
        }

        .form-control, .input-group-text, .btn {
            border-radius: 10px;
            transition: all 0.3s ease-in-out;
        }

            .form-control:focus {
                border-color: #ffc107; /* Yellow accent on focus */
                box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.3);
            }

        .btn-login {
            background-color: #0d6efd; /* Blue primary button */
            color: white;
            font-weight: 600;
            padding: 12px;
            border: none;
        }

            .btn-login:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 20px -5px rgba(13, 110, 253, 0.6);
            }

            .btn-login:disabled {
                cursor: not-allowed;
            }

        .error-message {
            color: #dc3545;
            font-weight: 500;
        }

        .footer-text {
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="text-center logo-container">
            <img src="@Url.Content("~/Images/updated aLphabet logo.png")" alt="Logo" class="logo">
        </div>
        <form id="loginForm" method="post" action="/Home/Authenticate" class="mt-4">
            <div class="mb-3 group-1">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control p-2" placeholder="Enter your email" required />
            </div>
            <div class="mb-4 group-2">
                <label class="form-label">Password</label>
                <div class="input-group">
                    <input type="password" name="password" class="form-control p-2" placeholder="Enter your password" required id="password">
                    <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()" title="Show/Hide Password">
                        <i class="bi bi-eye-fill" id="eyeIcon"></i>
                    </button>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4 group-3">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                <a href="#">Forgot Password?</a>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <p class="error-message text-center group-4">@ViewBag.Error</p>
            }

            <button type="submit" class="btn btn-login w-100 group-4">LOGIN</button>
        </form>
        <p class="text-center mt-4 footer-text">© @DateTime.Now.Year aLphabet. All Rights Reserved.</p>
    </div>

    <script>
        function togglePassword() {
            var passwordField = document.getElementById("password");
            var eyeIcon = document.getElementById("eyeIcon");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                eyeIcon.classList.remove("bi-eye-fill");
                eyeIcon.classList.add("bi-eye-slash-fill");
            } else {
                passwordField.type = "password";
                eyeIcon.classList.remove("bi-eye-slash-fill");
                eyeIcon.classList.add("bi-eye-fill");
            }
        }

        const loginForm = document.getElementById('loginForm');
        loginForm.addEventListener('submit', function() {
            const loginButton = loginForm.querySelector('.btn-login');
            loginButton.disabled = true;
            loginButton.innerHTML = `
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Processing...
            `;
        });
    </script>
</body>
</html>